{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "target": "es6",
    "lib": ["es2015", "dom"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": false
  },
  "exclude": ["node_modules", "platforms", "dist", "__tests__", "**/*.job.ts"]
}
