{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "target": "es5",
    "lib": ["es2015"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "rootDir": "./",
    "skipLibCheck" : true,
    "baseUrl": ".",
    "esModuleInterop": false
  },
  "exclude": [
    "node_modules",
    "platforms",
    "dist",
    "__tests__"
  ]
}
